        padding-bottom: 4px;
    }
    .print-footer {
        border-top: 1px dashed #000;
        border-bottom: none;
        margin-top: 6px;
        padding-top: 4px;
    }
    
    /* 5. Hide controls and main app elements (Keep original list, expanded) */
    button, .form-check, .nav, .tab-content, .tab-pane, h3,
    .modal-dialog, .btn, .alert, img:not(.logo) { 
        display: none !important; 
    }

    /* 6. Ensure table cells (for item rows) don't add extra padding */
    table, tr, td {
        border-collapse: collapse;
        padding: 0 !important;
        line-height: 1.2;
    }
